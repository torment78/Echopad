<Window x:Class="Echopad.App.Settings.HotkeyCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Hotkey"
        Width="440" Height="210"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource PrimaryTextBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Press a key combination"
                   FontSize="16"
                   FontWeight="SemiBold"/>

        <TextBlock Grid.Row="2"
                   Text="{Binding HotkeyText}"
                   FontSize="22"
                   FontWeight="ExtraBold"
                   Opacity="0.92"/>

        <TextBlock Grid.Row="4"
                   Opacity="0.75"
                   TextWrapping="Wrap">
            Tip: Press Esc to cancel. Press Backspace/Delete to clear.
        </TextBlock>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Clear" Width="90" Margin="0,0,10,0" Click="Clear_Click"/>
            <Button Content="Cancel" Width="90" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="OK" Width="90" IsDefault="True" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
