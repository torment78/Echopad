<Window
    x:Class="Echopad.App.Settings.PadSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Echopad.App.Settings"
    mc:Ignorable="d"
    Title="Pad Settings"
    Width="1100"
    Height="960"
    MaxWidth="1100"
    MaxHeight="960"
    MinWidth="800"
    MinHeight="700"
    WindowStartupLocation="CenterOwner"
    Background="{DynamicResource BgBrush}"
    Foreground="{DynamicResource TextBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:IntEqualsConverter x:Key="IntEqualsConverter" />

        <!-- ===== Palette (GRAY THEME) ===== -->
        <SolidColorBrush x:Key="BgBrush" Color="#212121"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#212121"/>
        <SolidColorBrush x:Key="ControlBgBrush" Color="#181818"/>
        <SolidColorBrush x:Key="ControlBorderBrush" Color="#303030"/>
        <SolidColorBrush x:Key="ControlHoverBrush" Color="#242424"/>
        <SolidColorBrush x:Key="ControlPressedBrush" Color="#1D1D1D"/>
        <SolidColorBrush x:Key="TextBrush" Color="#EAEAEA"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#B8B8B8"/>
        <SolidColorBrush x:Key="WaveformBorderBrush" Color="#1B1B1B"/>
        <!-- Default GroupBox style (kept for safety; specific ones are overridden below) -->
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{StaticResource ControlBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <!-- NEW: Flat section header (replaces GroupBox chrome for compact layout) -->
        <Style x:Key="FlatSectionHeader" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <!-- NEW: Flat "card" container for top area -->
        <Style x:Key="TopCardBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- NEW: tiny time entry box (keeps same colors as global TextBox style) -->
        <Style x:Key="TinyTimeBox" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- NEW: IN/OUT should match the same dark/white system, but borderless -->
        <!--<Style x:Key="TrimInOutBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TinyTimeBox}">
            <Setter Property="Background" Value="{StaticResource ControlBgBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style> -->

        <!-- NEW: Flat GroupBox template used ONLY where you asked (keeps header, removes outline) -->
        <Style x:Key="FlatGroupBoxNoBorder" TargetType="{x:Type GroupBox}">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <!-- slightly tighter default margin between sections -->
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER (tighter gap to top card) -->
        <TextBlock Text="Per-Pad Settings"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,4"/>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- TOP CARD: Audio File + Trim (tight) -->
                <Border Style="{StaticResource TopCardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ===== Audio File (flat, tight) ===== -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Audio File"
                                       Style="{StaticResource FlatSectionHeader}"
                                       Margin="0,0,0,2"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBox Grid.Row="0" Grid.Column="0"
                                         Text="{Binding ClipPath}"
                                         IsReadOnly="True"/>

                                <Button Grid.Row="0" Grid.Column="1"
                                        Margin="8,0,0,0"
                                        Content="Browse…"
                                        Style="{StaticResource EchopadTopButtonStyle}"
                                        Click="BrowseAudio_Click"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Margin="0,6,0,0"
                                           Opacity="0.85"
                                           Text="{Binding DurationText}" />
                            </Grid>
                        </StackPanel>

                        <!-- ===== Trim (flat, compact, aligned) ===== -->
                        <Grid Grid.Row="1" Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>

                            <!-- Left side: Trim header + waveform placeholder -->
                            <Grid Grid.Column="0" Margin="0,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                   Text="Trim"
                   Style="{StaticResource FlatSectionHeader}"
                   Margin="0,0,0,6"/>
                            </Grid>

                            <!-- Shared alignment grid -->
                            <Grid Grid.Column="0" Grid.ColumnSpan="2" Margin="0,22,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="110"/>
                                </Grid.ColumnDefinitions>

                                <!-- NEW: add one row for Play -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- Play -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- IN -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- OUT -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- Reset -->
                                </Grid.RowDefinitions>

                                <!-- LEFT: waveform/spectro placeholder + PLAYHEAD OVERLAY -->
                                <Border Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="0"
                Height="120"
                CornerRadius="8"
                Background="{StaticResource ControlBgBrush}"
                BorderBrush="{StaticResource WaveformBorderBrush}"
                BorderThickness="1"
                Opacity="0.95"
                Margin="0,0,10,0">

                                    <!-- IMPORTANT: overlay stack -->
                                    <Grid>

                                        <local:SpectrogramTrimControl x:Name="WaveHost"
      Margin="6"
      AudioPath="{Binding ClipPath}"
      DurationMs="{Binding ClipDurationMs}"
      StartMs="{Binding StartMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
      EndMs="{Binding EndMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
      PreviewMouseLeftButtonDown="WaveHost_PreviewMouseLeftButtonDown"
      PreviewMouseRightButtonDown="WaveHost_PreviewMouseRightButtonDown"
      PreviewMouseRightButtonUp="WaveHost_PreviewMouseRightButtonUp"
      PreviewMouseMove="WaveHost_PreviewMouseMove"/>


                                        <!-- Playhead overlay (drag surface + visuals) -->
                                        <Canvas x:Name="PlayheadOverlay"
        Panel.ZIndex="10"
        Background="Transparent"
        Margin="6"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Width="{Binding ActualWidth, ElementName=WaveHost}"
        Height="{Binding ActualHeight, ElementName=WaveHost}"
        MouseLeftButtonDown="PlayheadOverlay_MouseLeftButtonDown"
        MouseMove="PlayheadOverlay_MouseMove"
        MouseLeftButtonUp="PlayheadOverlay_MouseLeftButtonUp">


                                            <!-- fat translucent body -->
                                            <Rectangle x:Name="PlayheadBody"
                               Width="8"
                               Height="Auto"
                               Opacity="0.28"
                               RadiusX="2" RadiusY="2"
                               Fill="{DynamicResource AccentBrush}"
                               Canvas.Top="0"/>

                                            <!-- thin bright core -->
                                            <Rectangle x:Name="PlayheadCore"
                               Width="2"
                               Height="Auto"
                               Opacity="0.95"
                               RadiusX="1" RadiusY="1"
                               Fill="{DynamicResource Accent2Brush}"
                               Canvas.Top="0"/>

                                            <!-- top triangle marker -->
                                            <Polygon x:Name="PlayheadTopTri"
                             Opacity="0.95"
                             Fill="{DynamicResource Accent2Brush}"
                             Points="0,0 10,0 5,6"/>

                                            <!-- bottom triangle marker -->
                                            <Polygon x:Name="PlayheadBotTri"
                             Opacity="0.95"
                             Fill="{DynamicResource Accent2Brush}"
                             Points="0,6 10,6 5,0"/>

                                            <!-- optional larger hit targets (transparent) -->
                                            <Rectangle x:Name="PlayheadHitTop"
                               Width="26"
                               Height="18"
                               Opacity="0"
                               Fill="White"/>

                                            <Rectangle x:Name="PlayheadHitBot"
                               Width="26"
                               Height="18"
                               Opacity="0"
                               Fill="White"/>
                                        </Canvas>

                                    </Grid>
                                </Border>

                                <!-- RIGHT: Play (same size as Reset) -->
                                <Button Grid.Row="0" Grid.Column="1"
                Height="26"
                Padding="8,0"
                FontSize="12"
                Content="{Binding PreviewPlayButtonText}"
                Style="{StaticResource EchopadTopButtonStyle}"
                Click="PreviewPlayPause_Click"/>

                                <!-- RIGHT: IN -->
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,2,0,0"
                 Style="{StaticResource TrimInOutBox_Label}"
                 Tag="IN"
                 Text="{Binding StartMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}}"
                 HorizontalContentAlignment="Right"/>

                                <!-- RIGHT: OUT -->
                                <TextBox Grid.Row="2" Grid.Column="1" Margin="0,2,0,0"
                 Style="{StaticResource TrimInOutBox_Label}"
                 Tag="OUT"
                 Text="{Binding EndMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}}"
                 HorizontalContentAlignment="Right"/>

                                <!-- RIGHT: Reset -->
                                <Button Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,0"
                Height="26"
                Padding="8,0"
                FontSize="12"
                Content="Reset"
                Style="{StaticResource EchopadTopButtonStyle}"
                Click="ResetTrim_Click"/>
                            </Grid>
                        </Grid>

                    </Grid>
                </Border>

                <!-- ROUTING + PAD COLORS (SIDE BY SIDE) -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="205*"/>
                        <ColumnDefinition Width="439"/>
                        <ColumnDefinition Width="407*"/>
                    </Grid.ColumnDefinitions>

                    <!-- INPUT SOURCE + PREVIEW (LEFT) -->
                    <GroupBox Grid.Column="0"
             Header="Routing"
             Style="{StaticResource FlatGroupBoxNoBorder}" Margin="0,0,0,8" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">

                        <StackPanel Margin="12">

                            <TextBlock Text="Input Source (normal playback):" Opacity="0.85" Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Width="218" Height="54">
                                <RadioButton Content="Input 1"
                             GroupName="InputSource"
                             Margin="0,0,16,40"
                             IsChecked="{Binding InputSource, Converter={StaticResource IntEqualsConverter}, ConverterParameter=1}"
                             Height="16"/>

                                <RadioButton Content="Input 2"
                             GroupName="InputSource"
                             Margin="-85,0,0,0"
                             IsChecked="{Binding InputSource, Converter={StaticResource IntEqualsConverter}, ConverterParameter=2}"
                             Height="14" Width="58"/>
                            </StackPanel>

                            <CheckBox Margin="0,-15,0,12"
                      IsChecked="{Binding PreviewToMonitor}"
                      Height="41">
                                <CheckBox.Content>
                                    <TextBlock TextWrapping="Wrap">
                        Play to Monitor Output<LineBreak/>
                        in Edit Mode
                                    </TextBlock>
                                </CheckBox.Content>
                            </CheckBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- LEFT: MIDI feedback -->
                    <GroupBox Grid.Column="1"
              Header="MIDI Feedback"
              Style="{StaticResource FlatGroupBoxNoBorder}" Margin="5,0,10,8" d:LayoutOverrides="TopMargin, BottomMargin">
                        <StackPanel Margin="12">

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                          Text="{Binding MidiTriggerRaw, UpdateSourceTrigger=PropertyChanged}"
                          IsReadOnly="True"
                          Opacity="0.9"/>

                                <Button Grid.Column="1"
                         Margin="8,0,0,0"
                         Click="LearnMidiPad_Click"
                         IsEnabled="True">

                                    <Button.Style>
                                        <Style TargetType="Button"
                                BasedOn="{StaticResource EchopadTopButtonStyle}">
                                            <Setter Property="Content" Value="Learn MIDI"/>
                                            <Setter Property="IsEnabled" Value="True"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMidiLearning}" Value="True">
                                                    <Setter Property="Content" Value="Listening..."/>
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                </Button>
                            </Grid>

                            <TextBlock Text="LED Output Values (sent to default MIDI Out)" Opacity="0.85" Margin="0,0,0,8"/>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Active:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="{Binding MidiLedActiveEntry, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Running:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="{Binding MidiLedRunningEntry, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Clear:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="{Binding MidiLedClearEntry, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                        </StackPanel>
                    </GroupBox>

                    <!-- PER-PAD UI COLORS (RIGHT) -->
                    <GroupBox Grid.Column="2"
             Header="Pad Colors (Per Pad)"
             Style="{StaticResource FlatGroupBoxNoBorder}"
             Margin="10,4,0,5">

                        <Grid Margin="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Opacity="0.75"
                       TextWrapping="Wrap"
                       Text="Per-pad overrides (hex). Leave blank to use defaults. Clear/Empty stays gray." />

                            <!-- Active -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                       Text="Active (Loaded):"
                       VerticalAlignment="Top"
                       Margin="0,23,47,0"/>

                            <Grid Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                         Text="{Binding UiActiveHex, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalContentAlignment="Center"
                         Margin="-39,0,0,0"/>

                                <Button Grid.Column="1"
                        Margin="8,0,0,0"
                        Content="Pick…"
                        Style="{StaticResource EchopadTopButtonStyle}"
                        Click="PickActiveColor_Click"/>
                            </Grid>

                            <!-- Running -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Running (Playing):"
                       VerticalAlignment="Top"
                       Margin="0,22,31,0"/>

                            <Grid Grid.Row="2" Grid.Column="1" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                         Text="{Binding UiRunningHex, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalContentAlignment="Center"
                         Margin="-40,0,0,0"/>

                                <Button Grid.Column="1"
                        Margin="8,0,0,0"
                        Content="Pick…"
                        Style="{StaticResource EchopadTopButtonStyle}"
                        Click="PickRunningColor_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>


                <!-- MIDI FEEDBACK + SOURCE MODE (tighten middle gap; NO content removed) -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="Pad Hotkey"
         Style="{StaticResource FlatGroupBoxNoBorder}"
         Margin="0,0,0,8" Width="551">
                        <Grid Margin="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto" MinWidth="142"/>
                                <ColumnDefinition Width="Auto" MinWidth="129"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                   Text="{Binding PadHotkey}"
                   Opacity="0.9"
                   TextTrimming="CharacterEllipsis" Margin="0,32,0,32"/>

                            <Button Grid.Column="1"
                Margin="10,32,10,33"
                Content="Set Hotkey"
                Style="{StaticResource EchopadTopButtonStyle}"
                Click="SetPadHotkey_Click"/>

                            <Button Grid.Column="2"
                Content="Clear"
                Style="{StaticResource EchopadTopButtonStyle}"
                Click="ClearPadHotkey_Click" Margin="0,32,10,33"/>
                        </Grid>
                    </GroupBox>

                    <!-- RIGHT: Source mode -->
                    <GroupBox Grid.Column="2"
                             Header="Source Mode"
                             Style="{StaticResource FlatGroupBoxNoBorder}">
                        <StackPanel Margin="12">
                            <TextBlock Opacity="0.85"
                                       TextWrapping="Wrap"
                                       Text="Pick how this pad gets audio. If both are OFF, the pad uses Browse File mode." />

                            <CheckBox Margin="0,10,0,0"
                                      Content="Echo Mode (capture last buffer, e.g. 15s)"
                                      IsChecked="{Binding IsEchoMode}"/>

                            <CheckBox Margin="0,10,0,0"
                                      Content="Drop Folder Mode (auto from watched folders)"
                                      IsChecked="{Binding IsDropFolderMode}"/>

                            <TextBlock Margin="0,10,0,0"
                                       Opacity="0.75"
                                       TextWrapping="Wrap"
                                       Text="Browse mode shows the selected file. Echo/Drop will still show the active clip path here when armed/loaded." />
                        </StackPanel>
                    </GroupBox>
                </Grid>


                <!-- PAD NAME -->
                <GroupBox Header="Pad Name"
         Style="{StaticResource FlatGroupBoxNoBorder}"
         Margin="0,0,0,8" Width="551">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                 Text="{Binding PadName, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="48"
                 VerticalContentAlignment="Center"/>

                        <Button Grid.Column="1"
                Margin="10,0,0,0"
                Content="Clear"
                Style="{StaticResource EchopadTopButtonStyle}"
                Click="ClearPadName_Click"/>
                    </Grid>
                </GroupBox>


            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,14,0,0">
            <Button Content="Cancel"
                    Width="100"
                    Margin="0,0,8,0"
                    Style="{StaticResource EchopadTopButtonStyle}"
                    Click="Cancel_Click"/>
            <Button Content="OK"
                    Width="100"
                    Style="{StaticResource EchopadTopButtonStyle}"
                    Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
