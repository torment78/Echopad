<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:Echopad.Core;assembly=Echopad.Core"
                    xmlns:ui="clr-namespace:Echopad.App.UI.Behaviors"
                    xmlns:conv="clr-namespace:Echopad.App.UI.Converters">

    <!-- Converter used by pad template -->
    <conv:PadVisualBrushConverter x:Key="PadVisualBrushConverter"/>

    <!-- =========================================================
         TOP BAR BUTTONS (Settings / Edit)
       ========================================================= -->
    <Style x:Key="EchopadTopButtonStyle" TargetType="{x:Type ButtonBase}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="MinWidth" Value="110"/>
        <Setter Property="Padding" Value="14,0"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>

        <!-- OLD (blue hardcode) -->
        <!-- <Setter Property="Background" Value="#131B2A"/> -->
        <!-- <Setter Property="BorderBrush" Value="#2C3A4E"/> -->

        <!-- NEW: route through theme resources -->
        <Setter Property="Background" Value="{DynamicResource ControlBgBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>

        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Border x:Name="B"
                            CornerRadius="12"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="18"
                                              ShadowDepth="0"
                                              Opacity="0.35"/>
                        </Border.Effect>

                        <Grid>
                            <Border CornerRadius="12"
                                    Margin="1"
                                    Opacity="0.07"
                                    Background="White"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>

                        <!-- Toggle ON -->
                        <Trigger Property="ToggleButton.IsChecked" Value="True">
                            <Setter TargetName="B" Property="BorderBrush" Value="{DynamicResource Accent2Brush}"/>
                            <Setter TargetName="B" Property="Background" Value="{DynamicResource ControlPressedBrush}"/>
                        </Trigger>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="B" Property="Background" Value="{DynamicResource ControlHoverBrush}"/>
                            <Setter TargetName="B" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="B" Property="Background" Value="{DynamicResource ControlPressedBrush}"/>
                            <Setter TargetName="B" Property="BorderBrush" Value="{DynamicResource Accent2Brush}"/>
                            <Setter TargetName="B" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="B" Property="Opacity" Value="0.45"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- =========================================================
         PAD BUTTONS (4x4 grid)
       ========================================================= -->
    <Style x:Key="EchopadPadButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Padding" Value="0"/>

        <!-- Thinner border -->
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>

        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid SnapsToDevicePixels="True">

                        <!-- OUTER SHADOW -->
                        <Border CornerRadius="14" Background="Transparent">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="28"
                                                  ShadowDepth="6"
                                                  Opacity="0.55"/>
                            </Border.Effect>
                        </Border>

                        <!-- PAD BODY -->
                        <Border x:Name="PadBody"
                                CornerRadius="14"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">

                            <!-- NEW: Background comes from converter (tinted surface) -->
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource PadVisualBrushConverter}"
                  ConverterParameter="Background">
                                    <Binding Path="State"/>
                                    <Binding Path="ClipPath"/>
                                    <Binding Path="IsEchoMode"/>
                                    <Binding Path="InputSource"/>
                                    <Binding Path="Index"/>
                                    <Binding Path="GlobalSettings"
                 RelativeSource="{RelativeSource AncestorType=Window}"/>
                                </MultiBinding>
                            </Border.Background>

                            <Grid>
                                <!-- INNER HAIRLINE — NO MORE THICK WHITE -->
                                <Border CornerRadius="13"
                                        Margin="2"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource ControlBorderBrush}"
                                        Opacity="0.25"/>

                                <!-- subtle depth -->
                                <Border CornerRadius="13"
                                        Margin="3"
                                        BorderThickness="1"
                                        BorderBrush="#22000000"
                                        Opacity="0.35"/>

                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>

                                <!-- EDIT TIME OVERLAY -->
                                <Grid x:Name="EditTimeOverlay"
                                      Opacity="0"
                                      IsHitTestVisible="False"
                                      Margin="10,8,10,0"
                                      VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding TotalSecText}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               Opacity="0.85"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding PlayheadSecText}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               Opacity="0.85"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"/>
                                </Grid>

                                <!-- EDIT OVERLAY -->
                                <Grid x:Name="EditOverlay"
                                      Opacity="0"
                                      IsHitTestVisible="False"
                                      Margin="6">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                                Background="#01000000"
                                                CornerRadius="8"
                                                Padding="6"
                                                ToolTip="Start trim (ms) - hover + wheel"
                                                ui:PadTrimWheelBehavior.Target="Start"
                                                ui:PadTrimWheelBehavior.IsActive="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=Window}}"
                                                ui:PadTrimWheelBehavior.SettingsService="{Binding SettingsService, RelativeSource={RelativeSource AncestorType=Window}}"
                                                ui:PadTrimWheelBehavior.GlobalSettings="{Binding GlobalSettings, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <TextBlock Text="{Binding StartMs}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Bottom"
                                                       Opacity="0.85"/>
                                        </Border>

                                        <Border Grid.Column="1"
                                                Background="#01000000"
                                                CornerRadius="8"
                                                Padding="6"
                                                ToolTip="End trim (ms) - hover + wheel"
                                                ui:PadTrimWheelBehavior.Target="End"
                                                ui:PadTrimWheelBehavior.IsActive="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=Window}}">
                                            <TextBlock Text="{Binding EndMs}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Bottom"
                                                       Opacity="0.85"/>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- GLOW RINGS (brush from converter) -->
                        <Border x:Name="GlowRing"
                                CornerRadius="14"
                                BorderThickness="2"
                                Opacity="0"
                                IsHitTestVisible="False">
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource PadVisualBrushConverter}"
                  ConverterParameter="Glow">
                                    <Binding Path="State"/>
                                    <Binding Path="ClipPath"/>
                                    <Binding Path="IsEchoMode"/>
                                    <Binding Path="InputSource"/>
                                    <Binding Path="Index"/>
                                    <Binding Path="GlobalSettings"
                 RelativeSource="{RelativeSource AncestorType=Window}"/>
                                </MultiBinding>
                            </Border.BorderBrush>
                        </Border>

                        <Border x:Name="GlowRing2"
                                CornerRadius="14"
                                BorderThickness="1"
                                Opacity="0"
                                IsHitTestVisible="False">
                            <Border.BorderBrush>
                                <MultiBinding Converter="{StaticResource PadVisualBrushConverter}"
                  ConverterParameter="Glow">
                                    <Binding Path="State"/>
                                    <Binding Path="ClipPath"/>
                                    <Binding Path="IsEchoMode"/>
                                    <Binding Path="InputSource"/>
                                    <Binding Path="Index"/>
                                    <Binding Path="GlobalSettings"
                 RelativeSource="{RelativeSource AncestorType=Window}"/>
                                </MultiBinding>
                            </Border.BorderBrush>
                        </Border>

                        <!-- HOLD-TO-CLEAR RING -->
                        <Border x:Name="HoldClearRing"
                                CornerRadius="14"
                                BorderThickness="3"
                                BorderBrush="{DynamicResource Accent2Brush}"
                                Opacity="0"
                                IsHitTestVisible="False"
                                SnapsToDevicePixels="True"/>

                        <!-- GLASS SHEEN -->
                        <Border x:Name="GlassSheen"
                                CornerRadius="14"
                                Opacity="0"
                                IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#80FFFFFF" Offset="0"/>
                                    <GradientStop Color="#10FFFFFF" Offset="0.35"/>
                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- SCANLINES -->
                        <Border x:Name="Scanlines"
                                CornerRadius="14"
                                Opacity="0"
                                IsHitTestVisible="False">
                            <Border.Background>
                                <VisualBrush TileMode="Tile"
                                             Viewport="0,0,1,0.12"
                                             ViewportUnits="RelativeToBoundingBox">
                                    <VisualBrush.Visual>
                                        <Grid Width="100" Height="100">
                                            <Rectangle Height="4"
                                                       VerticalAlignment="Top"
                                                       Opacity="0.08"
                                                       Fill="White"/>
                                        </Grid>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Border.Background>
                        </Border>

                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Show edit overlay only in edit mode -->
                        <DataTrigger Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=Window}}"
                                     Value="True">
                            <Setter TargetName="EditOverlay" Property="Opacity" Value="1"/>
                            <Setter TargetName="EditOverlay" Property="IsHitTestVisible" Value="True"/>
                            <Setter TargetName="EditTimeOverlay" Property="Opacity" Value="1"/>
                        </DataTrigger>

                        <!-- HOLD RING when armed -->
                        <DataTrigger Binding="{Binding IsHoldArmed}" Value="True">
                            <Setter TargetName="HoldClearRing" Property="Opacity" Value="1"/>
                            <DataTrigger.EnterActions>
                                <BeginStoryboard x:Name="HoldRingStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoldClearRing"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0.35"
                                                         Duration="0:0:0.35"
                                                         AutoReverse="True"
                                                         RepeatBehavior="Forever" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="HoldRingStoryboard"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>

                        <!-- CTRL COPY VISUALS (ClipMod) -->
                        <DataTrigger Binding="{Binding ClipMod}" Value="{x:Static core:ClipMod.CopySource}">
                            <Setter TargetName="PadBody" Property="BorderBrush" Value="#FF3B3B"/>
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.65"/>
                            <Setter TargetName="GlowRing" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="26" ShadowDepth="0" Opacity="0.65"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding ClipMod}" Value="{x:Static core:ClipMod.CopiedTarget}">
                            <Setter TargetName="PadBody" Property="BorderBrush" Value="#FFD24A"/>
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.55"/>
                        </DataTrigger>

                        <!-- STATE-DRIVEN VISUAL INTENSITY (no more hardcoded blues) -->

                        <!-- EMPTY -->
                        <DataTrigger Binding="{Binding State}" Value="{x:Static core:PadState.Empty}">
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.00"/>
                            <Setter TargetName="GlowRing2" Property="Opacity" Value="0.00"/>
                            <Setter TargetName="GlassSheen" Property="Opacity" Value="0.00"/>
                            <Setter TargetName="Scanlines" Property="Opacity" Value="0.00"/>
                        </DataTrigger>

                        <!-- ARMED -->
                        <DataTrigger Binding="{Binding State}" Value="{x:Static core:PadState.Armed}">
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.22"/>
                            <Setter TargetName="GlowRing2" Property="Opacity" Value="0.12"/>
                            <Setter TargetName="GlassSheen" Property="Opacity" Value="0.10"/>
                        </DataTrigger>

                        <!-- LOADED -->
                        <DataTrigger Binding="{Binding State}" Value="{x:Static core:PadState.Loaded}">
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.18"/>
                            <Setter TargetName="GlowRing2" Property="Opacity" Value="0.10"/>
                        </DataTrigger>

                        <!-- PLAYING -->
                        <DataTrigger Binding="{Binding State}" Value="{x:Static core:PadState.Playing}">
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.45"/>
                            <Setter TargetName="GlowRing2" Property="Opacity" Value="0.30"/>
                            <Setter TargetName="Scanlines" Property="Opacity" Value="0.10"/>
                        </DataTrigger>

                        <!-- HOVER -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.55"/>
                            <Setter TargetName="GlowRing2" Property="Opacity" Value="0.28"/>
                            <Setter TargetName="GlassSheen" Property="Opacity" Value="0.22"/>
                            <Setter TargetName="Scanlines" Property="Opacity" Value="0.14"/>
                        </Trigger>

                        <!-- PRESSED -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="GlowRing" Property="Opacity" Value="0.75"/>
                            <Setter TargetName="GlowRing2" Property="Opacity" Value="0.40"/>
                            <Setter TargetName="GlassSheen" Property="Opacity" Value="0.12"/>
                            <Setter TargetName="Scanlines" Property="Opacity" Value="0.18"/>
                            <Setter TargetName="PadBody" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <!-- DISABLED -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PadBody" Property="Opacity" Value="0.45"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
